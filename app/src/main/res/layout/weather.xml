<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/weather_container"
    android:background="#ffc30f"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_temp"
            android:layout_width="wrap_content"
            android:layout_height="52sp"
            android:layout_gravity="start"
            android:text="Temp"
            android:textSize="42sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/widget_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Небо"
            android:textSize="10sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/ic_update"/>
    <TextView
        android:id="@+id/last_update_time"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="12sp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@id/update_btn"
        android:layout_toStartOf="@id/update_btn"

        android:text="17:43"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout"

        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/widget_img"
            android:layout_width="52sp"
            android:layout_height="52sp"
            android:layout_gravity="center"
            android:scaleX="1.3"
            android:scaleY="1.3" />

        <TextView
            android:id="@+id/widget_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Город"
            android:textSize="10sp"
            android:textColor="@color/white"/>

    </LinearLayout>






</RelativeLayout>